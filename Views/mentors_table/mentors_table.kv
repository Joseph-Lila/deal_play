<MentorsTable@MDCard>:
    drop: drop
    mentor_records: mentor_records
    title: title
    md_bg_color: 58 / 255, 60 / 255, 73 / 255, 1
    orientation: "vertical"
    spacing: 10
    padding: 5

    MDLabel:
        id: title
        size_hint_y: .15
        halign: "center"
        pos_hint: {'center_x': .5}
        markup: True
        bold: True
        text: "ПРЕПОДАВАТЕЛИ: [color=#ff0000]0/0[/color]"
        theme_text_color: "Custom"
        text_color: "white"
        font_size: 22

    AnchorLayout:
        size_hint_y: .15
        MDDropDownItem:
            id: drop
            pos_hint: {'center_x': .5}
            font_size: 22
            on_release: root.root_widget.mentors_table_menu.open()

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: .7
        spacing: 15

        MDGridLayout:
            size_hint_y: .3
            cols: 4
            rows: 1
            spacing: 10
            padding: 7

            MDRaisedButton:
                text: "Предмет"
                halign: "center"
                disabled: True
                disabled_color: "black"
                md_bg_color_disabled: 217 / 255, 217 / 255, 217 / 255, 1
                size_hint: .9, None

            MDRaisedButton:
                text: "Группа"
                halign: "center"
                disabled: True
                disabled_color: "black"
                md_bg_color_disabled: 217 / 255, 217 / 255, 217 / 255, 1
                size_hint: .9, None

            MDRaisedButton:
                text: "Лекц., ч."
                halign: "center"
                disabled: True
                disabled_color: "black"
                md_bg_color_disabled: 217 / 255, 217 / 255, 217 / 255, 1
                size_hint: .9, None

            MDRaisedButton:
                text: "Лаб., ч."
                halign: "center"
                disabled: True
                disabled_color: "black"
                md_bg_color_disabled: 217 / 255, 217 / 255, 217 / 255, 1
                size_hint: .9, None

        ScrollView:
            size_hint_y: .7
            size: self.size

            MDGridLayout:
                id: mentor_records
                adaptive_height:True
                cols: 4
                size_hint_y: None
                row_default_height: '40dp'
                spacing: 10
                padding: 7
