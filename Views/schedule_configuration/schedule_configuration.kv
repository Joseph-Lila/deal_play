<ScheduleConfigurationView>:
    id: root_widget
    mentors: mentors
    groups: groups
    configuration: configuration

    MDCard:
        elevation: 10
        md_bg_color: 25 / 255, 28 / 255, 34 / 255, 1
        padding: "8dp"

        MDCard:
            md_bg_color: 35 / 255, 37 / 255, 49 / 255, 1

            BoxLayout:
                orientation: 'vertical'
                padding: 20

                BoxLayout:
                    size_hint_y: 1

                    BoxLayout:

                        BoxLayout:
                            orientation: "vertical"
                            padding: 10
                            spacing: 10

                            Title:
                                size_hint_y: .15

                            ActionButtons:
                                size_hint_y: .1
                                root_widget: root

                            ConfigurationTable:
                                id: configuration
                                root_widget: root_widget

                        BoxLayout:
                            size_hint_x: .65
                            orientation: "vertical"
                            spacing: 30
                            padding: 10

                            MentorsTable:
                                id: mentors
                                root_widget: root_widget

                            GroupsTable:
                                id: groups
                                root_widget: root_widget

                            BoxLayout:
                                orientation: "vertical"
                                size_hint_y: .8

                                AnchorLayout:
                                    MDRaisedButton:
                                        md_bg_color: 'green'
                                        text: "СОХРАНИТЬ"

                                AnchorLayout:
                                    MDRaisedButton:
                                        md_bg_color: 58 / 255, 60 / 255, 73 / 255, 1
                                        text: "ОТПРАВИТЬ"

                                AnchorLayout:
                                    MDRaisedButton:
                                        md_bg_color: 'red'
                                        text: "УДАЛИТЬ"

                Footer:
                    size_hint_y: .1
                    root_widget: root_widget
