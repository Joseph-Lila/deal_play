#: import ResetConfigurationTableCommand Domain.Commands.reset_configuration_table.ResetConfigurationTableCommand
    

<MyDialog@ModalView>:
    size_hint: None, None
    size: 556, 428
    kind: kind
    mentor: mentor
    place: place
    place_btn: place_btn
    kind_btn: kind_btn
    mentor_btn: mentor_btn

    MDCard:
    	id: main_cont
		orientation: 'vertical'
		md_bg_color: 58 / 255, 60 / 255, 73 / 255 , 1
		padding: 25
		spacing: 10

		MDLabel:
			font_size: 35
			bold: True
			text: "ДОБАВИТЬ ЭЛЕМЕНТ КОНФИГУРАЦИИ"
			theme_text_color: "Custom"
			text_color: 247 / 255, 137 / 255, 37 / 255, 1

		MDLabel:
			size_hint_y: .3
			font_size: 10
			text: "Укажите аудиторию"

		BoxLayout:

			AnchorLayout:
				size_hint_x: .3
				MDIcon:
					icon: 'Assets/icons/free-icon-edit-3803197.png'
			
			AnchorLayout:    
				MDLabel:
					id: place
					text: '2-227'
					halign: 'center'
					valign: 'center'
					font_size: 32
			
			AnchorLayout: 
				size_hint_x: .3
				MDIconButton:
					id: place_btn
					icon: 'Assets/icons/free-icon-next-4766041.png'
					on_release: root.owner.dialog_places_menu.open() 
				
		MDLabel:
			size_hint_y: .3
			font_size: 10
			text: "Укажите преподавателя"

		BoxLayout:
		
			AnchorLayout:
				size_hint_x: .3
				MDIcon:
					icon: 'Assets/icons/free-icon-user-3801784.png'
			
			AnchorLayout:    
				MDLabel:
					id: mentor
					text: '2-227'
					halign: 'center'
					valign: 'center'
					font_size: 32
		
			AnchorLayout:
				size_hint_x: .3 
				MDIconButton:
					id: mentor_btn
					icon: 'Assets/icons/free-icon-next-4766041.png'
					on_release: root.owner.dialog_mentors_menu.open()
				
		MDLabel:
			size_hint_y: .3
			font_size: 10
			text: "Укажите тип занятия"

		BoxLayout:
		
			AnchorLayout:
				size_hint_x: .3
				MDIcon:
					icon: 'Assets/icons/free-icon-minimize-3803131.png'
			
			AnchorLayout:    
				MDLabel:
					id: kind
					text: '2-227'
					halign: 'center'
					valign: 'center'
					font_size: 32
		
			AnchorLayout:
				size_hint_x: .3 
				MDIconButton:
					id: kind_btn
					icon: 'Assets/icons/free-icon-next-4766041.png'
					on_release: root.owner.dialog_kinds_menu.open()
				
		BoxLayout:
			AnchorLayout:
				MDRaisedButton:
					text: 'Отмена'
					font_size: 25
					md_bg_color: 247/255, 137/255, 37/255, 1
					on_release: root.dismiss()
				
			AnchorLayout:
				MDRaisedButton:
					text: 'Сохранить'
					font_size: 25
					md_bg_color: 247/255, 137/255, 37/255, 1



<ActionButtons@BoxLayout>:
    AnchorLayout:
        MDRaisedButton:
            text: "АВТОЗАПОЛНЕНИЕ"
            md_bg_color: 237 / 255, 133 / 255, 32 / 255, 1

    AnchorLayout:
        MDRaisedButton:
            text: "СБРОСИТЬ"
            md_bg_color: 237 / 255, 133 / 255, 32 / 255, 1
            on_release: root.root_widget.controller.post_command_to_model(ResetConfigurationTableCommand())

<Title@BoxLayout>:
    orientation: "vertical"

    MDLabel:
        text: "КОНФИГУРАЦИЯ РАСПИСАНИЯ"
        font_style: "H4"
        theme_text_color: "Custom"
        text_color: 237 / 255, 133 / 255, 32 / 255, 1

    MDLabel:
        text: "ДНЕВНАЯ ф.о. - 2022 - 1е полугодие"
        font_style: "H4"
        theme_text_color: "Custom"
        text_color: 237 / 255, 133 / 255, 32 / 255, 1

<Footer@BoxLayout>:

    AnchorLayout:
        size_hint_x: 1
        MDLabel:
            text: "Подключение и техническая поддержка:"
            font_style: "Body1"
            theme_text_color: "Custom"
            text_color: "white"

    AnchorLayout:
        size_hint_x: .5
        MDLabel:
            text: "edu.gstu@gmail.by"
            font_style: "Body1"
            bold: True
            theme_text_color: "Custom"
            text_color: 153 / 255, 153 / 255, 153 / 255, 1

    AnchorLayout:
        size_hint_x: .5
        MDLabel:
            text: "80(29)123-45-67"
            font_style: "Button"
            font_size: "18"
            bold: True
            theme_text_color: "Custom"
            text_color: "white"

    AnchorLayout:
        size_hint_x: 1
        MDRaisedButton:
            text: "ВЫХОД"
            md_bg_color: 247 / 255, 137 / 255, 37 / 255, 1


<ScheduleConfigurationView>:
    id: root_widget
    mentors: mentors
    groups: groups
    configuration: configuration

    MDCard:
        elevation: 10
        md_bg_color: 25 / 255, 28 / 255, 34 / 255, 1
        padding: "8dp"

        MDCard:
            md_bg_color: 35 / 255, 37 / 255, 49 / 255, 1

            BoxLayout:
                orientation: 'vertical'
                padding: 20

                BoxLayout:
                    size_hint_y: 1

                    BoxLayout:

                        BoxLayout:
                            orientation: "vertical"
                            padding: 10
                            spacing: 10

                            Title:
                                size_hint_y: .15

                            ActionButtons:
                                size_hint_y: .1
                                root_widget: root

                            ConfigurationTable:
                                id: configuration
                                root_widget: root_widget

                        BoxLayout:
                            size_hint_x: .65
                            orientation: "vertical"
                            spacing: 30
                            padding: 10

                            MentorsTable:
                                id: mentors
                                root_widget: root_widget

                            GroupsTable:
                                id: groups
                                root_widget: root_widget

                            BoxLayout:
                                orientation: "vertical"
                                size_hint_y: .8

                                AnchorLayout:
                                    MDRaisedButton:
                                        md_bg_color: 'green'
                                        text: "СОХРАНИТЬ"

                                AnchorLayout:
                                    MDRaisedButton:
                                        md_bg_color: 58 / 255, 60 / 255, 73 / 255, 1
                                        text: "ОТПРАВИТЬ"

                                AnchorLayout:
                                    MDRaisedButton:
                                        md_bg_color: 'red'
                                        text: "УДАЛИТЬ"

                Footer:
                    size_hint_y: .1
                    root_widget: root_widget
